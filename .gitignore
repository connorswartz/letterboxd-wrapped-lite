# Create .gitignore file
cat > .gitignore << 'EOF'
# Environment variables (IMPORTANT - contains your TMDB API key)
.env
*.env
.env.local
.env.production

# Python
__pycache__/
*.py[cod]
*$py.class
*.so
.Python
build/
develop-eggs/
dist/
downloads/
eggs/
.eggs/
lib/
lib64/
parts/
sdist/
var/
wheels/
*.egg-info/
.installed.cfg
*.egg

# Virtual environments
venv/
env/
ENV/
.venv/

# Database files
*.db
*.sqlite
*.sqlite3
letterboxd_wrapped.db

# Poetry
poetry.lock

# IDE
.vscode/
.idea/
*.swp
*.swo

# macOS
.DS_Store

# Node.js (for future frontend)
node_modules/
npm-debug.log*
yarn-debug.log*
yarn-error.log*
.npm
.yarn-integrity

# Next.js (for future frontend)
.next/
out/

# Logs
*.log
logs/
EOF
# History files
.history/
